<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<HBox spacing="10.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gmsis.controllers.users.ChangePasswordPopupController">
   <children>
      <JFXPasswordField fx:id="passwordField" labelFloat="true" promptText="Enter new password">
         <HBox.margin>
            <Insets top="8.0" />
         </HBox.margin></JFXPasswordField>
      <JFXButton buttonType="RAISED" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#changePassword" ripplerFill="#00c853" style="-fx-background-color: #1b5e20;">
         <graphic>
            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@check.png" />
               </image>
            </ImageView>
         </graphic>
      </JFXButton>
       <JFXButton buttonType="RAISED" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#closePopup" ripplerFill="#ff1744" style="-fx-background-color: #b71c1c;">
           <graphic>
               <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                   <image>
                       <Image url="@close.png" />
                   </image>
               </ImageView>
           </graphic>
       </JFXButton>
   </children>
   <padding>
      <Insets bottom="12.0" left="10.0" right="10.0" top="12.0" />
   </padding>
   <effect>
      <DropShadow />
   </effect>
</HBox>
